% Commande personnalisée pour deux colonnes
\newcommand{\textimg}[3]{ % #1 = largeur première colonne, #2 = contenu première colonne, #3 = chemin vers l'image
  \begin{columns}
    \begin{column}{#1\textwidth}
      #2
    \end{column}
    \begin{column}{\dimexpr1\textwidth-#1\textwidth\relax}
      \includegraphics[width=1.0\textwidth]{#3}
    \end{column}
  \end{columns}
}
